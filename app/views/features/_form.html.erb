<%= form_for @feature, html: { class: "form-horizontal" } do |f| %>
  <%= f.error_messages %>
  <fieldset class="well">
    <legend>Feature</legend>
    <div class="control-group">
      <%= f.label :name, class: "control-label" %>
      <div class="controls">
        <%= f.text_field :name %>
      </div>
    </div>
    <p><%= f.submit class: "btn btn-success" %></p>
  </fieldset>
<% end %>
