      </div>
      <div class="form-group checkbox">
        <%= location.label :university_landmark do %>
          University
          <%= location.check_box :university_landmark %>
        <% end %>
      </div>

      <h5>Choose three terms that best describe your property</h5>
      <div class="form-group checkbox">
        <%= location.label :luxury_property do %>
          Luxury
          <%= location.check_box :luxury_property %>
        <% end %>
      </div>
      <div class="form-group checkbox">
        <%= location.label :affordable_property do %>
          Affordable
          <%= location.check_box :affordable_property %>
        <% end %>
      </div>
      <div class="form-group checkbox">
        <%= location.label :gated_property do %>
          Gated
          <%= location.check_box :gated_property %>
        <% end %>
      </div>
      <div class="form-group checkbox">
        <%= location.label :furnished_property do %>
          Furnished
          <%= location.check_box :furnished_property %>
        <% end %>
      </div>

      <h5>What is the architectural style of the building, if any?</h5>
      <div class="form-group checkbox">
        <%= location.label :modern_structure do %>
          Modern
          <%= location.check_box :modern_structure %>
        <% end %>
      </div>
      <div class="form-group checkbox">
        <%= location.label :townhome_structure do %>
          Townhome
          <%= location.check_box :townhome_structure %>
        <% end %>
      </div>
      <div class="form-group checkbox">
        <%= location.label :garden_structure do %>
          Garden Style
          <%= location.check_box :garden_structure %>
        <% end %>
      </div>
      <div class="form-group checkbox">
        <%= location.label :highrise_structure do %>
          High Rise
          <%= location.check_box :highrise_structure %>
        <% end %>
      </div>

    </div> <!-- end .col-sm-6 -->
  </div> <!-- end .row -->

