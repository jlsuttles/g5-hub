<fieldset>
  <legend>Features and Amenities</legend>
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <%= location.label :specific_demographic, 'Is your location speciafically designed for a certain demographic?' %>
        <%= location.select :specific_demographic, Client::DEMOGRAPHIC_OPTIONS, {include_blank: true}, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= location.label :primary_offering, 'What the main offering of this location?' %>
        <%= location.select :primary_offering, ['Apartments', 'Townhomes', 'Condos', 'Other'], {include_blank: true}, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= location.label :primary_offering_other, 'If Other, what is the primary offering?' %>
        <%= location.text_field :primary_offering, class: 'form-control' %>
      </div>
      <h5>What, if any, are the secondary offerings?</h5>
      <div class="form-group checkbox">
        <%= location.label :secondary_apartments do %>
          Apartments
          <%= location.check_box :secondary_apartments %>
        <% end %>
      </div>
      <div class="form-group checkbox">
        <%= location.label :secondary_townhomes do %>
          Townhomes
          <%= location.check_box :secondary_townhomes %>
        <% end %>
      </div>
      <div class="form-group checkbox">
        <%= location.label :secondary_condo do %>
          Condos
          <%= location.check_box :secondary_condo %>
        <% end %>
      </div>
      <div class="form-group">
        <%= location.label :secondary_other, 'List any other secondary offerings' %>
        <%= location.text_field :secondary_other, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= location.label :floor_plans, 'Please describe your floor plans' %>
        <%= location.text_field :floor_plans, class: 'form-control', placeholder: 'Ex. 1, 2, & 3 Bedroom, Studio, Etc.' %>
      </div>

      <div class="form-group">
        <%= location.label :nearby_employers, 'Please list any nearby large employers' %>
        <%= location.text_field :nearby_employers, class: 'form-control', placeholder: 'Ex. military base' %>
      </div>

      <div class="form-group">
        <%= location.label :nearby_schools, 'Please list any nearby schools or colleges' %>
        <%= location.text_field :nearby_schools, class: 'form-control' %>
      </div>
    </div> <!-- end .col-sm-6 -->

    <div class="col-sm-6">
      <h5>What are two landmarks near your location?</h5>
      <div class="form-group checkbox">
        <%= location.label :hospital_landmark do %>
