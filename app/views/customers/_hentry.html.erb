<dl class="h-entry">
  <dt>Name</dt>
  <dd>
    <span class="p-name"><%= customer.name %></span>
  </dd>
  <dt>Bookmark/UID</dt>
  <dd>
    <a href="<%= customer_url(customer) %>" rel="bookmark" class="u-url u-uid">
      <%= customer_url(customer) %>
    </a>
  </dd>
  <dt>Summary</dt>
  <dd>
    <span class="p-summary">Signed up with <%= customer.locations.size %> locations</span>
  </dd>
  <dt>Published</dt>
  <dd>
    <time datetime="<%= customer.created_at_computer_readable %>" class="dt-published">
      <%= customer.created_at_human_readable %>
    </time>
  </dd>
  <dt>Category</dt>
  <dd>
    <a class="p-category" href="#" rel="tag">
      Some Category
    </a>
  </dd>
  <dt>Author</dt>
  <dd>
    <dl class="p-author h-card">
      <dt>UID</dt>
      <dd>
        <a class="u-url u-uid" href="<%= root_url %>">
          <%= root_url %>
        </a>
      </dd>
      <dt>Name</dt>
      <dd>
        <span class="p-name">g5-hub</span>
      </dd>
    </dl>
  </dd>
  <dt>Content</dt>
  <dd>
    <dl class="e-content">
      <dt>Customer</dt>
      <dd>
        <%= render customer %>
      </dd>
    </dl>
  </dd>
</dl>
